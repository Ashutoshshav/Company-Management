@model Digitization.Models.EmployeeMaster

@{
    ViewData["Title"] = "Login";
}

<div class="flex min-h-screen items-center justify-center bg-gradient-to-b from-gray-100 to-gray-200">
    <div class="-mt-20 w-full max-w-sm rounded-lg bg-white p-8 shadow-lg">
        <h1 class="mb-6 text-center text-3xl font-bold text-gray-800">Login</h1>

        <div asp-validation-summary="ModelOnly" class="mb-4 text-center font-medium text-red-500"></div>
        <form asp-action="Login" class="flex flex-col">
            <!-- Email Input -->
            <div class="mb-4">
                <label asp-for="EmployeeEmail" class="mb-1 block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="EmployeeEmail" class="w-full rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="EmployeeEmail" class="text-xs italic text-red-500"></span>
            </div>

            <!-- Password Input -->
            <div class="mb-4">
                <label asp-for="EmployeePassword" class="mb-1 block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="EmployeePassword" type="password" class="w-full rounded border px-3 py-2 leading-tight text-gray-700 shadow focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="EmployeePassword" class="text-xs italic text-red-500"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit" class="customBlue customBlue2Hover mt-2 w-full rounded px-4 py-2 font-bold text-white focus:outline-none focus:ring-2 focus:ring-green-500">
                    Log In
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
